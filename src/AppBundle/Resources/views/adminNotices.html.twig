{% include '@App/myHeader.html.twig' %}

{% block body %}
    <h1>Edit Notice Board notices!</h1>
    {% for notice in notices %}
        ID. {{ notice.id }}:
        Author: <b>{{ notice.user.username }}</b>
        Title: "{{ notice.title }}"
        Created: {{ notice.creationDate|date('Y-m-d\\ H:i:s') }}
        Due date: {{ notice.dueDate|date('Y-m-d\\ H:i:s') }}
        Categories: {% for category in notice.categories %} | {{ category.name }} | {% endfor %}
        <a href="{{ path('app_notice_editnotice', {'id': notice.id}) }}"><button>Edit Notice</button></a>
        <a href="{{ path('app_notice_deletenotice', {'id': notice.id}) }}"><button>Delete Notice</button></a>
        <br>
    {% endfor %}

{% endblock %}