{% block body %}
    {% for notice in notices %}
        {% if notice.status == 'active' %}
            <p>{{ notice.title }} created {{ notice.creationDate|date('Y-m-d\\ H:i:s') }}<br>
                {{ notice.description }}<br>
                Expires: {{ notice.dueDate|date('Y-m-d\\ H:i:s') }}
            </p><br>
        {% endif %}
    {% else %}
        <p>No active yet.</p><br>
    {% endfor %}
{% endblock %}